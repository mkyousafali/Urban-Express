# Environment Configuration Template

# Copy this file to .env.local and update with your actual values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
VITE_APP_ENV=development
VITE_APP_NAME="Urban Express"
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=http://localhost:54321

# =====================================================
# LOCALIZATION SETTINGS
# =====================================================
VITE_DEFAULT_LOCALE=ar
VITE_SUPPORTED_LOCALES=ar,en
VITE_TIMEZONE=Asia/Riyadh
VITE_CURRENCY=SAR

# =====================================================
# DEVELOPMENT SERVER PORTS
# =====================================================
VITE_CUSTOMER_PORT=3000
VITE_DRIVER_PORT=3001
VITE_ADMIN_PORT=3002

# =====================================================
# EXTERNAL API KEYS
# =====================================================
# Google Maps API (for navigation and geocoding)
VITE_GOOGLE_MAPS_API_KEY=AIzaSyC...

# OpenAI API (for AI chat assistance)
OPENAI_API_KEY=sk-...

# WhatsApp Business API (for password resets)
WHATSAPP_BUSINESS_API_TOKEN=your-whatsapp-token
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# =====================================================
# PUSH NOTIFICATIONS
# =====================================================
# Web Push VAPID keys (generate with: npx web-push generate-vapid-keys)
VITE_VAPID_PUBLIC_KEY=BF...
VAPID_PRIVATE_KEY=your-private-key

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
# Supabase Storage bucket for POS slip photos
VITE_STORAGE_BUCKET=urban-express-uploads
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =====================================================
# SECURITY SETTINGS
# =====================================================
# JWT configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=3600  # 1 hour in seconds

# Session configuration
SESSION_COOKIE_NAME=urban-express-session
SESSION_MAX_AGE=86400  # 24 hours in seconds

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=true
REQUIRE_PASSWORD_LOWERCASE=true
REQUIRE_PASSWORD_NUMBERS=true
REQUIRE_PASSWORD_SYMBOLS=false

# Rate limiting
RATE_LIMIT_WINDOW=900  # 15 minutes in seconds
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# BUSINESS LOGIC CONFIGURATION
# =====================================================
# Order configuration
ORDER_TIMEOUT_MINUTES=30
MAX_DELIVERY_DISTANCE_KM=50
DEFAULT_DELIVERY_WINDOW_HOURS=2

# Cash management
MAX_CASH_VARIANCE_SAR=5.00
REQUIRE_DRAWER_APPROVAL_THRESHOLD=10.00

# Delivery charges
MIN_DELIVERY_CHARGE=0
MAX_DELIVERY_CHARGE=50
DEFAULT_DELIVERY_CHARGE=10

# =====================================================
# MONITORING & LOGGING
# =====================================================
# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-...
SENTRY_DSN=https://...

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/disable features during development
ENABLE_AI_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_LOCATION_TRACKING=true
ENABLE_CAMERA_CAPTURE=true

# Debug features
ENABLE_DEBUG_PANEL=false
SHOW_QUERY_LOGS=false
MOCK_PAYMENT_GATEWAY=true

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================
# Storybook configuration
STORYBOOK_PORT=6006

# Testing configuration
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80

# Database seeding
SEED_DEMO_DATA=true
DEMO_USERS_COUNT=10
DEMO_ORDERS_COUNT=50

# =====================================================
# PRODUCTION OVERRIDES
# =====================================================
# These should be overridden in production environment

# Security
# VITE_APP_ENV=production
# LOG_LEVEL=warn
# ENABLE_DEBUG_PANEL=false
# SHOW_QUERY_LOGS=false
# MOCK_PAYMENT_GATEWAY=false
# SEED_DEMO_DATA=false

# Performance
# PERFORMANCE_SAMPLE_RATE=0.01
# RATE_LIMIT_MAX_REQUESTS=60

# URLs (update for production)
# VITE_API_BASE_URL=https://your-production-api.com
# VITE_APP_URL=https://your-production-app.com